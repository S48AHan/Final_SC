
@{
    ViewBag.Title = "Register";
}

<h2>CreateUser</h2>


<form action="/Home/Register" method="post">

    <div class="form-group">
        <label for="">Name</label>
        <input type="text" class="form-control" id="txtName" placeholder="Enter Name" name="Name" required>
        @Html.ValidationMessage("Name", "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label for="">Password</label>
        <input type="password" class="form-control" id="txtPassword" placeholder="Enter Password" name="Userpassword" required>
        @Html.ValidationMessage("Email", "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label for="">Email</label>
        <input type="email" class="form-control" id="txtEmail" placeholder="Enter Email" name="Email" required>
        @Html.ValidationMessage("UserPassword", "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label for="">Roles</label>
        <input type="text" class="form-control" id="txtRole" placeholder="Enter Role" name="UserRole" required>
        @Html.ValidationMessage("UserPassword", "", new { @class = "text-danger" })
    </div>

    <!--
    <div class="text-danger">
        @Html.ValidationSummary()
    </div>
    -->
    <button class="btn btn-success">Submit</button>
</form>